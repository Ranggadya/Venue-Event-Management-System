<!-- Breadcrumb -->
<nav class="breadcrumb mb-6">
    <a href="/dashboard" class="breadcrumb-item">Dashboard</a>
    <span class="breadcrumb-separator">/</span>
    <a href="/venues" class="breadcrumb-item">Venues</a>
    <span class="breadcrumb-separator">/</span>
    <span class="text-slate-900 font-medium">
        <%= venue.name %>
    </span>
</nav>

<!-- Page Header -->
<div class="flex items-start justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-slate-900 mb-2">
            <%= venue.name %>
        </h1>
        <div class="flex items-center space-x-4 text-sm text-slate-600">
            <span class="flex items-center">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= venue.city %>
            </span>
            <span class="flex items-center">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <%= venue.capacity %> capacity
            </span>
            <span class="badge <%= 
                venue.status === 'AVAILABLE' ? 'badge-success' :
                venue.status === 'BOOKED' ? 'badge-warning' :
                venue.status === 'MAINTENANCE' ? 'badge-danger' :
                'bg-slate-100 text-slate-800'
            %>">
                <%= venue.status %>
            </span>
        </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center space-x-3">
        <a href="/events/create?venueId=<%= venue.id %>" class="btn btn-primary btn-sm">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Event
        </a>
        <a href="/venues/<%= venue.id %>/edit" class="btn btn-outline btn-sm">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit
        </a>
        <form method="POST" action="/venues/<%= venue.id %>/delete" class="inline-block"
            onsubmit="return confirm('Are you sure you want to delete this venue? This action cannot be undone.');">
            <button type="submit" class="btn btn-danger btn-sm">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
            </button>
        </form>
    </div>
</div>

<!-- Venue Info Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">

    <!-- Main Info Card -->
    <div class="lg:col-span-2">
        <div class="card">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-slate-900">Venue Information</h3>
            </div>
            <div class="card-body space-y-4">

                <!-- Description -->
                <% if (venue.description) { %>
                    <div>
                        <label class="text-sm font-medium text-slate-700">Description</label>
                        <p class="mt-1 text-slate-600">
                            <%= venue.description %>
                        </p>
                    </div>
                    <% } %>

                        <!-- Address -->
                        <div>
                            <label class="text-sm font-medium text-slate-700">Full Address</label>
                            <p class="mt-1 text-slate-600">
                                <%= venue.address %>, <%= venue.city %>
                            </p>
                        </div>

                        <!-- Capacity -->
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="text-sm font-medium text-slate-700">Capacity</label>
                                <p class="mt-1 text-2xl font-bold text-slate-900">
                                    <%= venue.capacity %>
                                </p>
                                <p class="text-xs text-slate-500">people</p>
                            </div>
                            <div>
                                <label class="text-sm font-medium text-slate-700">Status</label>
                                <p class="mt-1">
                                    <span class="badge <%= 
                                venue.status === 'AVAILABLE' ? 'badge-success' :
                                venue.status === 'BOOKED' ? 'badge-warning' :
                                venue.status === 'MAINTENANCE' ? 'badge-danger' :
                                'bg-slate-100 text-slate-800'
                            %>">
                                        <%= venue.status %>
                                    </span>
                                </p>
                            </div>
                        </div>

            </div>
        </div>
    </div>

    <!-- Pricing Card -->
    <div>
        <div class="card">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-slate-900">Pricing</h3>
            </div>
            <div class="card-body space-y-4">

                <!-- Price Per Day -->
                <% if (venue.pricePerDay) { %>
                    <div>
                        <label class="text-sm font-medium text-slate-700">Per Day</label>
                        <p class="mt-1 text-2xl font-bold text-primary-600">
                            <%= new Intl.NumberFormat('id-ID', { style: 'currency' , currency: venue.currency || 'IDR' ,
                                minimumFractionDigits: 0 }).format(venue.pricePerDay) %>
                        </p>
                    </div>
                    <% } %>

                        <!-- Price Per Hour -->
                        <% if (venue.pricePerHour) { %>
                            <div>
                                <label class="text-sm font-medium text-slate-700">Per Hour</label>
                                <p class="mt-1 text-xl font-bold text-slate-900">
                                    <%= new Intl.NumberFormat('id-ID', { style: 'currency' , currency: venue.currency
                                        || 'IDR' , minimumFractionDigits: 0 }).format(venue.pricePerHour) %>
                                </p>
                            </div>
                            <% } %>

                                <!-- Currency -->
                                <div>
                                    <label class="text-sm font-medium text-slate-700">Currency</label>
                                    <p class="mt-1 text-slate-600">
                                        <%= venue.currency || 'IDR' %>
                                    </p>
                                </div>

            </div>
        </div>

        <!-- Timestamps -->
        <div class="card mt-6">
            <div class="card-body text-xs text-slate-500 space-y-2">
                <p><strong>Created:</strong>
                    <%= new Date(venue.createdAt).toLocaleString('id-ID') %>
                </p>
                <p><strong>Updated:</strong>
                    <%= new Date(venue.updatedAt).toLocaleString('id-ID') %>
                </p>
            </div>
        </div>
    </div>

</div>

<!-- Events at This Venue -->
<div class="card">
    <div class="card-header flex items-center justify-between">
        <div>
            <h3 class="text-lg font-semibold text-slate-900">Events at This Venue</h3>
            <p class="text-sm text-slate-600 mt-1">
                <%= venue.events ? venue.events.length : 0 %> total events
            </p>
        </div>
        <a href="/events/create?venueId=<%= venue.id %>" class="btn btn-primary btn-sm">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Event
        </a>
    </div>

    <% if (venue.events && venue.events.length> 0) { %>
        <div class="overflow-x-auto">
            <table class="table">
                <thead class="table-header">
                    <tr>
                        <th class="table-header-cell">Event Name</th>
                        <th class="table-header-cell">Date & Time</th>
                        <th class="table-header-cell">Duration</th>
                        <th class="table-header-cell">Price</th>
                        <th class="table-header-cell">Status</th>
                        <th class="table-header-cell text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-body">
                    <% venue.events.forEach(event=> { %>
                        <tr class="table-row-hover">
                            <td class="table-cell">
                                <a href="/events/<%= event.id %>"
                                    class="font-medium text-slate-900 hover:text-primary-600">
                                    <%= event.name %>
                                </a>
                                <% if (event.description) { %>
                                    <p class="text-xs text-slate-500 mt-0.5 truncate max-w-xs">
                                        <%= event.description.substring(0, 50) %>
                                            <%= event.description.length> 50 ? '...' : '' %>
                                    </p>
                                    <% } %>
                            </td>
                            <td class="table-cell">
                                <div class="text-sm text-slate-900">
                                    <%= new Date(event.startDatetime).toLocaleDateString('id-ID') %>
                                </div>
                                <div class="text-xs text-slate-500">
                                    <%= new Date(event.startDatetime).toLocaleTimeString('id-ID', { hour: '2-digit' ,
                                        minute: '2-digit' }) %>
                                </div>
                            </td>
                            <td class="table-cell">
                                <% const duration=(new Date(event.endDatetime) - new Date(event.startDatetime)) / (1000
                                    * 60 * 60); %>
                                    <span class="text-sm text-slate-900">
                                        <%= Math.round(duration) %> hours
                                    </span>
                            </td>
                            <td class="table-cell">
                                <% if (event.finalPrice) { %>
                                    <div class="text-sm font-medium text-slate-900">
                                        <%= new Intl.NumberFormat('id-ID', { style: 'currency' , currency: 'IDR' ,
                                            minimumFractionDigits: 0 }).format(event.finalPrice) %>
                                    </div>
                                    <% if (event.isPaid) { %>
                                        <span class="badge badge-success text-xs">PAID</span>
                                        <% } else { %>
                                            <span class="badge badge-warning text-xs">UNPAID</span>
                                            <% } %>
                                                <% } %>
                            </td>
                            <td class="table-cell">
                                <span class="badge <%= 
                            event.status === 'UPCOMING' ? 'badge-info' :
                            event.status === 'ONGOING' ? 'badge-success' :
                            event.status === 'COMPLETED' ? 'bg-slate-100 text-slate-800' :
                            'badge-danger'
                        %>">
                                    <%= event.status %>
                                </span>
                            </td>
                            <td class="table-cell text-right">
                                <div class="flex items-center justify-end space-x-2">
                                    <a href="/events/<%= event.id %>" class="btn btn-sm btn-secondary">View</a>
                                    <a href="/events/<%= event.id %>/edit" class="btn btn-sm btn-outline">Edit</a>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
        <% } else { %>
            <div class="card-body text-center py-12">
                <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="mt-4 text-sm font-medium text-slate-900">No events yet</h3>
                <p class="mt-2 text-sm text-slate-500">Get started by creating an event for this venue</p>
                <a href="/events/create?venueId=<%= venue.id %>" class="btn btn-primary btn-sm mt-4">
                    <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create First Event
                </a>
            </div>
            <% } %>
</div>