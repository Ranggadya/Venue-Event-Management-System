<aside class="w-64 bg-white border-r border-slate-200 flex flex-col">

    <!-- Logo/Brand -->
    <div class="h-16 flex items-center px-6 border-b border-slate-200 bg-gradient-primary">
        <a href="/dashboard" class="flex items-center space-x-3 group">
            <!-- Logo Icon -->
            <div
                class="h-10 w-10 bg-white/20 rounded-lg flex items-center justify-center group-hover:bg-white/30 transition-colors">
                <svg width="24" height="24" class="h-6 w-6 text-white" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
            <!-- Brand Name -->
            <span class="text-lg font-bold text-white">EventManager</span>
        </a>
    </div>

    <!-- Navigation Menu -->
    <nav class="flex-1 overflow-y-auto px-3 py-4 space-y-1 scrollbar-thin">

        <!-- Dashboard -->
        <a href="/dashboard"
            class="sidebar-nav-link <%= (currentPath === '/dashboard' || currentPath === '/') ? 'active' : '' %>">
            <div class="sidebar-nav-icon-container">
                <svg width="24" height="24" class="sidebar-nav-icon" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
            </div>
            <span>Dashboard</span>
        </a>

        <!-- Divider -->
        <div class="pt-4 pb-2">
            <p class="px-3 text-xs font-semibold text-slate-500 uppercase tracking-wider">Management</p>
        </div>

        <!-- Venues -->
        <div x-data="{ open: <%= currentPath.startsWith('/venues') ? 'true' : 'false' %> }">
            <button @click="open = !open"
                class="sidebar-nav-link w-full <%= currentPath.startsWith('/venues') ? 'active' : '' %>">
                <div class="sidebar-nav-icon-container">
                    <svg width="24" height="24" class="sidebar-nav-icon" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
                <span class="flex-1 text-left">Venues</span>
                <svg width="16" height="16" class="h-4 w-4 transition-transform" :class="{ 'rotate-90': open }"
                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>

            <div x-show="open" x-collapse class="ml-8 mt-1 space-y-1">
                <a href="/venues" class="sidebar-submenu-link <%= currentPath === '/venues' ? 'active' : '' %>">
                    All Venues
                </a>
                <a href="/venues/create"
                    class="sidebar-submenu-link <%= currentPath === '/venues/create' ? 'active' : '' %>">
                    Add New
                </a>
                <a href="/venues/statistics/overview"
                    class="sidebar-submenu-link <%= currentPath === '/venues/statistics/overview' ? 'active' : '' %>">
                    Statistics
                </a>
            </div>
        </div>

        <!-- Events -->
        <div x-data="{ open: <%= currentPath.startsWith('/events') ? 'true' : 'false' %> }">
            <button @click="open = !open"
                class="sidebar-nav-link w-full <%= currentPath.startsWith('/events') ? 'active' : '' %>">
                <div class="sidebar-nav-icon-container">
                    <svg width="24" height="24" class="sidebar-nav-icon" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <span class="flex-1 text-left">Events</span>
                <svg width="16" height="16" class="h-4 w-4 transition-transform" :class="{ 'rotate-90': open }"
                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>

            <div x-show="open" x-collapse class="ml-8 mt-1 space-y-1">
                <a href="/events" class="sidebar-submenu-link <%= currentPath === '/events' ? 'active' : '' %>">
                    All Events
                </a>
                <a href="/events/create"
                    class="sidebar-submenu-link <%= currentPath === '/events/create' ? 'active' : '' %>">
                    Add New
                </a>
                <a href="/events/statistics/overview"
                    class="sidebar-submenu-link <%= currentPath === '/events/statistics/overview' ? 'active' : '' %>">
                    Event Statistics
                </a>
                <a href="/events/financial/overview"
                    class="sidebar-submenu-link <%= currentPath === '/events/financial/overview' ? 'active' : '' %>">
                    Financial Stats
                </a>
            </div>
        </div>

        <!-- Divider -->
        <div class="pt-4 pb-2">
            <p class="px-3 text-xs font-semibold text-slate-500 uppercase tracking-wider">Reports</p>
        </div>

        <!-- Analytics (Optional) -->
        <a href="#" class="sidebar-nav-link opacity-50 cursor-not-allowed">
            <div class="sidebar-nav-icon-container">
                <svg width="24" height="24" class="sidebar-nav-icon" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
            <span>Analytics</span>
            <span class="badge badge-info text-xs ml-auto">Soon</span>
        </a>

    </nav>

    <!-- User Section (Bottom) -->
    <div class="border-t border-slate-200 p-4">

        <a href="/auth/logout"
            class="mt-3 flex items-center justify-center px-3 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg transition-colors text-sm font-medium">
            <svg width="16" height="16" class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            Logout
        </a>
    </div>

</aside>