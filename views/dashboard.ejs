<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
    <div>
        <h1 class="text-3xl font-bold text-slate-900">Dashboard</h1>
        <p class="text-slate-600 mt-2">Welcome back! Here's your overview.</p>
    </div>
    <div class="flex items-center gap-3">
        <a href="/venues/create" class="btn btn-outline btn-sm">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Venue
        </a>
        <a href="/events/create" class="btn btn-primary btn-sm">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Event
        </a>
    </div>
</div>

<!-- Statistics Cards - FULL WIDTH -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">

    <!-- Total Venues -->
    <div class="bg-white rounded-xl shadow-soft p-6 hover:shadow-soft-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-slate-600 mb-2">Total Venues</p>
                <p class="text-4xl font-bold text-slate-900">
                    <% if (venueStats && venueStats.total !==null) { %>
                        <%= venueStats.total %>
                            <% } else { %>
                                0
                                <% } %>
                </p>
                <% if (venueStats && venueStats.byStatus) { %>
                    <p class="text-sm text-emerald-600 mt-2 flex items-center">
                        <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                clip-rule="evenodd" />
                        </svg>
                        <%= venueStats.byStatus.find(s=> s.status === 'AVAILABLE')?.count || 0 %> available
                    </p>
                    <% } %>
            </div>
            <div class="h-16 w-16 bg-primary-100 rounded-2xl flex items-center justify-center">
                <svg class="h-8 w-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Total Events -->
    <div class="bg-white rounded-xl shadow-soft p-6 hover:shadow-soft-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-slate-600 mb-2">Total Events</p>
                <p class="text-4xl font-bold text-slate-900">
                    <% if (eventStats && eventStats.total !==null) { %>
                        <%= eventStats.total %>
                            <% } else { %>
                                0
                                <% } %>
                </p>
                <% if (eventStats) { %>
                    <p class="text-sm text-sky-600 mt-2 flex items-center">
                        <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd"
                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                clip-rule="evenodd" />
                        </svg>
                        <%= eventStats.upcoming || 0 %> upcoming
                    </p>
                    <% } %>
            </div>
            <div class="h-16 w-16 bg-accent-100 rounded-2xl flex items-center justify-center">
                <svg class="h-8 w-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Ongoing Events -->
    <div class="bg-white rounded-xl shadow-soft p-6 hover:shadow-soft-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-slate-600 mb-2">Ongoing</p>
                <p class="text-4xl font-bold text-slate-900">
                    <% if (eventStats && eventStats.ongoing !==null) { %>
                        <%= eventStats.ongoing %>
                            <% } else { %>
                                0
                                <% } %>
                </p>
                <p class="text-sm text-emerald-600 mt-2 flex items-center">
                    <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd"
                            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.707l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z"
                            clip-rule="evenodd" />
                    </svg>
                    Active now
                </p>
            </div>
            <div class="h-16 w-16 bg-emerald-100 rounded-2xl flex items-center justify-center">
                <svg class="h-8 w-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Completed Events -->
    <div class="bg-white rounded-xl shadow-soft p-6 hover:shadow-soft-lg transition-shadow">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-slate-600 mb-2">Completed</p>
                <p class="text-4xl font-bold text-slate-900">
                    <% if (eventStats && eventStats.completed !==null) { %>
                        <%= eventStats.completed %>
                            <% } else { %>
                                0
                                <% } %>
                </p>
                <p class="text-sm text-slate-500 mt-2">All time</p>
            </div>
            <div class="h-16 w-16 bg-slate-100 rounded-2xl flex items-center justify-center">
                <svg class="h-8 w-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>

</div>

<!-- Upcoming Events Table - FULL WIDTH -->
<div class="bg-white rounded-xl shadow-soft mb-8">
    <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
        <div>
            <h2 class="text-xl font-bold text-slate-900">Upcoming Events</h2>
            <p class="text-sm text-slate-600 mt-1">Next scheduled events</p>
        </div>
        <a href="/events" class="btn btn-primary btn-sm">
            View All Events
            <svg class="h-4 w-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-slate-50 border-b border-slate-200">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Event
                        Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Venue
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Date &
                        Time</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Payment
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
                <% if (upcomingEvents && upcomingEvents.length> 0) { %>
                    <% upcomingEvents.forEach(event=> { %>
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-slate-900">
                                    <%= event.name %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-slate-600">
                                    <%= event.venue?.name || 'Unknown' %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-slate-900">
                                    <%= new Date(event.startDatetime).toLocaleDateString('id-ID', { day: '2-digit' ,
                                        month: 'short' , year: 'numeric' }) %>
                                </div>
                                <div class="text-xs text-slate-500">
                                    <%= new Date(event.startDatetime).toLocaleTimeString('id-ID', { hour: '2-digit' ,
                                        minute: '2-digit' }) %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="badge badge-primary">UPCOMING</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="badge <%= event.isPaid ? 'badge-success' : 'badge-warning' %>">
                                    <%= event.isPaid ? 'Paid' : 'Pending' %>
                                </span>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <!-- Empty State -->
                                <tr>
                                    <td colspan="5" class="px-6 py-16 text-center">
                                        <svg class="mx-auto h-16 w-16 text-slate-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        <h3 class="mt-4 text-lg font-medium text-slate-900">No upcoming events</h3>
                                        <p class="mt-2 text-sm text-slate-500">Get started by creating your first event
                                        </p>
                                        <a href="/events/create" class="btn btn-primary btn-sm mt-4">
                                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 4v16m8-8H4" />
                                            </svg>
                                            Create Event
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>

<!-- Recent Venues - FULL WIDTH -->
<div class="bg-white rounded-xl shadow-soft">
    <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
        <div>
            <h2 class="text-xl font-bold text-slate-900">Recent Venues</h2>
            <p class="text-sm text-slate-600 mt-1">Latest added venues</p>
        </div>
        <a href="/venues" class="btn btn-outline btn-sm">
            View All Venues
            <svg class="h-4 w-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-slate-50 border-b border-slate-200">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Venue
                        Name</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Location
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Capacity
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
                        Price/Day</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-slate-200">
                <% if (recentVenues && recentVenues.length> 0) { %>
                    <% recentVenues.forEach(venue=> { %>
                        <tr class="hover:bg-slate-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-slate-900">
                                    <%= venue.name %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-slate-600">
                                    <%= venue.city %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-slate-900">
                                    <%= venue.capacity %> persons
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-slate-900">
                                    <%= venue.pricePerDay ? new Intl.NumberFormat('id-ID', { style: 'currency' ,
                                        currency: venue.currency || 'IDR' , minimumFractionDigits: 0
                                        }).format(venue.pricePerDay) : '-' %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="badge <%= 
                                    venue.status === 'AVAILABLE' ? 'badge-success' : 
                                    venue.status === 'BOOKED' ? 'badge-warning' : 
                                    'badge-danger' 
                                %>">
                                    <%= venue.status %>
                                </span>
                            </td>
                        </tr>
                        <% }); %>
                            <% } else { %>
                                <!-- Empty State -->
                                <tr>
                                    <td colspan="5" class="px-6 py-16 text-center">
                                        <svg class="mx-auto h-16 w-16 text-slate-400" fill="none" stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                        </svg>
                                        <h3 class="mt-4 text-lg font-medium text-slate-900">No venues yet</h3>
                                        <p class="mt-2 text-sm text-slate-500">Get started by adding your first venue
                                        </p>
                                        <a href="/venues/create" class="btn btn-primary btn-sm mt-4">
                                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 4v16m8-8H4" />
                                            </svg>
                                            Add Venue
                                        </a>
                                    </td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>